//Christian Notheisen
SET NAMES utf8;
SET time_zone = '+00:00';
SET foreign_key_checks = 0;
SET sql_mode = 'NO_AUTO_VALUE_ON_ZERO';

DROP DATABASE IF EXISTS `vier_gewinnt`;
CREATE DATABASE `vier_gewinnt` /*!40100 DEFAULT CHARACTER SET utf8 */;
USE `vier_gewinnt`;

DROP TABLE IF EXISTS `currentgame`;
CREATE TABLE `currentgame` (
  `zugnr` int(11) NOT NULL,
  `user` int(11) NOT NULL,
  `feld` int(11) NOT NULL,
  KEY `user` (`user`),
  CONSTRAINT `currentgame_ibfk_1` FOREIGN KEY (`user`) REFERENCES `users` (`id`)
) ENGINE=InnoDB DEFAULT CHARSET=utf8;


DROP TABLE IF EXISTS `users`;
CREATE TABLE `users` (
  `passwort` varchar(255) NOT NULL,
  `id` int(11) NOT NULL AUTO_INCREMENT,
  `benutzername` varchar(255) NOT NULL,
  `score` int(11) NOT NULL,
  `url` varchar(255) NOT NULL,
  PRIMARY KEY (`id`)
) ENGINE=InnoDB DEFAULT CHARSET=utf8;
